<Window x:Class="ComboBox_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComboBox_Manager"
        mc:Ignorable="d"
        Title="ComboBox Manager" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="0" Margin="10">
                <TextBox x:Name="NewItemTextBox" Width="200" Height="30" />
                <ComboBox x:Name="ColorItemComboBox" Width="200" Height="30" Margin="10,0,0,0">
                    <ComboBoxItem Content="Red" />
                    <ComboBoxItem Content="Green" />
                    <ComboBoxItem Content="Blue" />
                    <ComboBoxItem Content="Yellow" />
                    <ComboBoxItem Content="Orange" />
                    <ComboBoxItem Content="Purple" />
                    <ComboBoxItem Content="Brown" />
                    <ComboBoxItem Content="Gray" />
                    <ComboBoxItem Content="Pink" />
                    <ComboBoxItem Content="Black" />
                </ComboBox>
                <Button Content="Add" Width="80" Click="AddItem_Click" Margin="10,0,0,0"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1" Margin="10">
                <ComboBox x:Name="ItemComboBox" Width="200" Height="30" />
                <Button Content="Remove" Width="80" Click="RemoveItem_Click" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
